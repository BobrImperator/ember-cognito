<div class="container">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h1>Login</h1>
      {{#if newPasswordRequired}}
        <form onsubmit={{action 'newPassword'}}>
          {{#if errorMessage}}
            <div class="alert alert-danger">{{errorMessage}}</div>
          {{/if}}
          <p>Please enter a new password.</p>
          <div class="form-group">
            <label for="password">Password</label>
            {{input value=newPassword type="password" class="form-control" id="password" placeholder="Password" required=true}}
          </div>
          <button type="submit" class="btn btn-primary">Set password</button>
        </form>
      {{else}}
        <form onsubmit={{action 'login'}}>
          {{#if errorMessage}}
            <div class="alert alert-danger">{{errorMessage}}</div>
          {{/if}}
          <div class="form-group">
            <label for="username">Username</label>
            {{input value=username class="form-control" id="username" placeholder="Username" autofocus=true required=true}}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input value=password type="password" class="form-control" id="password" placeholder="Password" required=true}}
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      {{/if}}
    </div>
  </div>
</div>