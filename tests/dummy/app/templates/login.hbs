<div class="container">

  <div class="row">
    <div class="col-4">
      <h1>Login</h1>
      {{#if this.newPasswordRequired}}
        <form class="login-form" onsubmit={{action "newPassword"}}>
          {{#if this.errorMessage}}
            <div class="alert alert-danger">{{this.errorMessage}}</div>
          {{/if}}
          <p>Please enter a new password.</p>
          <div class="form-group">
            <label for="password">Password</label>
            {{input
              value=this.newPassword
              type="password"
              class="form-control"
              id="password"
              placeholder="Password"
              required=true
            }}
          </div>
          <button type="submit" class="btn btn-primary">Set password</button>
        </form>
      {{else}}
        <form class="login-form" onsubmit={{action "login"}}>
          {{#if this.errorMessage}}
            <div class="alert alert-danger">{{this.errorMessage}}</div>
          {{/if}}
          <div class="form-group">
            <label for="username">Username</label>
            {{input
              value=this.username
              class="form-control"
              id="username"
              placeholder="Username"
              autofocus=true
              required=true
            }}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input
              value=this.password
              type="password"
              class="form-control"
              id="password"
              placeholder="Password"
              required=true
            }}
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      {{/if}}
    </div>
  </div>
</div>