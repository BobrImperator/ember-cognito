<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>Delete user</h1>
      <p>Are you sure you want to delete this user? Type <strong>DELETE</strong>:</p>

      <form class="delete-user-form" onsubmit={{action "deleteUser"}}>
        {{#if this.errorMessage}}
          <div class="alert alert-danger">{{this.errorMessage}}</div>
        {{/if}}
        <div class="form-group">
          <label for="delete">Delete</label>
          {{input
            value=this.deleteVal
            class="form-control"
            id="delete"
            autofocus=true
            required=true
          }}
        </div>
        <button type="submit" class="btn btn-danger">Delete User</button>
        {{#link-to "index" class="btn btn-info ml-auto"}}Go back{{/link-to}}
      </form>
    </div>
  </div>
</div>
